<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_b2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_a2"
        android:background="@android:color/darker_gray"
        android:layout_above="@+id/field_b2"
        android:layout_toRightOf="@+id/field_a1"
        android:layout_toEndOf="@+id/field_a1"
        android:layout_marginBottom="8dp" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_b3"
        android:background="@android:color/darker_gray"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/field_b2"
        android:layout_toEndOf="@+id/field_b2"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_b1"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/field_b2"
        android:layout_toLeftOf="@+id/field_b2"
        android:layout_toStartOf="@+id/field_b2"
        android:layout_marginRight="8dp" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_c2"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/field_b2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_c3"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/field_c2"
        android:layout_toRightOf="@+id/field_c2"
        android:layout_toEndOf="@+id/field_c2"
        android:layout_marginLeft="8dp" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_a3"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/field_a2"
        android:layout_alignLeft="@+id/field_b3"
        android:layout_alignStart="@+id/field_b3" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_c1"
        android:background="@android:color/darker_gray"
        android:layout_alignBottom="@+id/field_c2"
        android:layout_alignLeft="@+id/field_b1"
        android:layout_alignStart="@+id/field_b1" />

    <Button
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/field_a1"
        android:background="@android:color/darker_gray"
        android:layout_alignBottom="@+id/field_a2"
        android:layout_alignLeft="@+id/field_b1"
        android:layout_alignStart="@+id/field_b1"
        android:layout_marginRight="8dp" />
</RelativeLayout>
